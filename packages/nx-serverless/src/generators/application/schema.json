{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "NxServerlessApplication",
  "title": "Nx Serverless Application Options Schema",
  "type": "object",
  "properties": {
    "plugin": {
      "description": "Which plugin you want to use within serverless",
      "type": "string",
      "enum": ["serverless-bundle", "@ns3/nx-serverless/plugin"],
      "default": "serverless-bundle"
    },
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "eslint"
    },
    "unitTestRunner": {
      "type": "string",
      "enum": ["jest", "none"],
      "description": "Test runner to use for unit tests",
      "default": "jest"
    },
    "babelJest": {
      "type": "boolean",
      "description": "Use babel instead ts-jest",
      "default": false
    },
    "port": {
      "type": "number",
      "description": "Port to listen on.",
      "default": 3333
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    },
    "strict": {
      "type": "boolean",
      "description": "Whether to enable tsconfig strict mode or not.",
      "default": true
    }
  },
  "required": ["name"]
}
