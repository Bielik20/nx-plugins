{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "NxNpm",
  "title": "Add npm version and publish capabilities",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "access": {
      "description": "Skip formatting files",
      "type": "string",
      "enum": ["public", "restricted"],
      "default": "public"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
